<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.ConfiguracionCuentaActivity">

    <include
        android:id="@+id/configuracionCuentaToolbar"
        layout="@layout/my_app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/actualizarUserName"
            layout="@layout/my_option_button"/>

        <include
            android:id="@+id/actualizarPassword"
            layout="@layout/my_option_button"/>

    </LinearLayout>

</LinearLayout>